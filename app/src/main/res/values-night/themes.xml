<resources>
    <!-- Base application theme (Dark) -->
    <style name="Theme.Pawtner.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary_orange</item>
        <item name="colorPrimaryVariant">@color/primary_orange_variant</item>
        <item name="colorOnPrimary">@color/black</item> <!-- Black text on orange -->

        <item name="colorSecondary">@color/primary_brown</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/black</item> <!-- Full window -->
        <item name="android:colorBackground">#313131</item> <!-- Main content background -->
        <item name="colorSurface">#B9B9B9</item> <!-- Card / Surface -->
        <item name="colorOnSurface">#FFFFFF</item> <!-- Text on surface -->

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Error colors -->
        <item name="colorError">@color/secondary_red</item>
        <item name="colorOnError">@color/white</item>

        <!-- Typography -->
        <item name="fontFamily">@font/poppins_regular</item>

        <!-- ActionBar specific -->
        <item name="android:actionBarStyle">@style/ActionBarStyle.Dark</item>
        <item name="android:toolbarStyle">@style/Widget.Pawtner.Toolbar</item>

        <!-- Components -->
        <item name="editTextBackground">@drawable/edit_text_background_dark</item>
        <item name="checkboxStyle">@style/Widget.Pawtner.CheckBox.Dark</item>
        <item name="buttonStyle">@style/Widget.Pawtner.Button.Dark</item>
    </style>

    <!-- Dark Button Style -->
    <style name="Widget.Pawtner.Button.Dark" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_orange</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <!-- Dark Checkbox Style -->
    <style name="Widget.Pawtner.CheckBox.Dark" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/primary_orange</item>
    </style>

    <!-- Dark ActionBar Style -->
    <style name="ActionBarStyle.Dark" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/primary_orange</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText.Dark</item>
    </style>

    <!-- ActionBar Title Text Styles -->
    <style name="ActionBarTitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="ActionBarTitleText.Dark">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>
</resources>